/* pages/history/history.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f5f5f5;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.history-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.history-date {
  font-size: 28rpx;
  color: #666;
}

.history-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #07c160;
}

.history-details {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.answer-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
}

.word {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.user-answer {
  font-size: 28rpx;
  flex: 1;
  text-align: center;
}

.user-answer.correct {
  color: #07c160;
}

.user-answer.wrong {
  color: #ff4d4f;
  text-decoration: line-through;
}

.status {
  font-size: 32rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 60vh;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.btn-primary {
  background: #07c160;
  color: white;
  padding: 25rpx 60rpx;
  border-radius: 50rpx;
}
