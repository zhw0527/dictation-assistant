/* pages/dictation/dictation.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

.word-display {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.current-word {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.word-index {
  display: block;
  font-size: 28rpx;
  color: #999;
}

.input-area {
  margin-bottom: 40rpx;
}

.word-input {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn-control {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.btn-control.btn-primary {
  background: #07c160;
  color: white;
}

.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: #07c160;
  transition: width 0.3s;
}
