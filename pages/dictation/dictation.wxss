/* pages/dictation/dictation.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
}

/* 积分显示区域 */
.points-display {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 30rpx 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.total-points, .session-points {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.points-label, .session-label {
  font-size: 24rpx;
  opacity: 0.9;
  margin-bottom: 8rpx;
}

.points-value {
  font-size: 48rpx;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.session-value {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFD700;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.streak-display {
  display: flex;
  align-items: center;
  gap: 8rpx;
  animation: pulse 1s infinite;
}

.streak-icon {
  font-size: 40rpx;
  animation: flame 0.5s infinite alternate;
}

.streak-value {
  font-size: 28rpx;
  font-weight: bold;
}

/* 词汇显示区域 */
.word-display {
  background: white;
  border-radius: 16rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.current-word {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.word-index {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 输入区域 */
.input-area {
  margin-bottom: 30rpx;
}

.word-input {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  font-size: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 语音输入按钮 */
.voice-input {
  margin-bottom: 30rpx;
}

.btn-record {
  width: 100%;
  padding: 40rpx;
  border-radius: 50rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  font-size: 32rpx;
  border: none;
  box-shadow: 0 8rpx 16rpx rgba(102, 126, 234, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 15rpx;
  transition: all 0.3s;
}

.btn-record:active {
  transform: scale(0.98);
}

.btn-record.recording {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5a6f 100%);
  animation: recording-pulse 1s infinite;
}

.record-icon {
  font-size: 40rpx;
}

.record-text {
  font-size: 28rpx;
  font-weight: bold;
}

/* 控制按钮 */
.control-buttons {
  display: flex;
  gap: 20rpx;
  margin-bottom: 40rpx;
}

.btn-control {
  flex: 1;
  padding: 30rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  background: white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.btn-control:active {
  transform: scale(0.95);
}

.btn-control.btn-primary {
  background: #07c160;
  color: white;
}

/* 进度条 */
.progress-bar {
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
  transition: width 0.3s;
}

/* 动画效果 */

/* 答对动画 */
.correct-answer {
  animation: correct-bounce 0.6s ease-out;
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%) !important;
  color: white !important;
}

@keyframes correct-bounce {
  0% { transform: scale(1); }
  30% { transform: scale(1.1); }
  50% { transform: scale(0.95); }
  70% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

/* 答错动画 */
.wrong-answer {
  animation: wrong-shake 0.6s ease-out;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%) !important;
  color: white !important;
}

@keyframes wrong-shake {
  0%, 100% { transform: translateX(0); }
  10%, 30%, 50%, 70%, 90% { transform: translateX(-10rpx); }
  20%, 40%, 60%, 80% { transform: translateX(10rpx); }
}

/* 连击脉冲动画 */
@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

/* 火焰动画 */
@keyframes flame {
  0% { transform: scale(1) rotate(-5deg); }
  100% { transform: scale(1.1) rotate(5deg); }
}

/* 录音脉冲动画 */
@keyframes recording-pulse {
  0%, 100% { 
    box-shadow: 0 0 0 0 rgba(255, 77, 79, 0.7);
  }
  50% { 
    box-shadow: 0 0 0 30rpx rgba(255, 77, 79, 0);
  }
}
