/* pages/correction/correction.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background: #f5f5f5;
}

/* 成绩概览卡片 */
.summary-card {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.grade-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  box-shadow: 0 8rpx 20rpx rgba(102, 126, 234, 0.3);
}

.grade-circle.优秀 {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.grade-circle.良好 {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.grade-circle.中等 {
  background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
}

.grade-circle.及格 {
  background: linear-gradient(135deg, #fa709a 0%, #fee140 100%);
}

.grade-circle.需努力 {
  background: linear-gradient(135deg, #30cfd0 0%, #330867 100%);
}

.grade-text {
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
}

.accuracy-text {
  font-size: 32rpx;
  color: white;
  opacity: 0.9;
}

.summary-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-item.correct .stat-value {
  color: #52c41a;
}

.stat-item.wrong .stat-value {
  color: #ff4d4f;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 错误类型统计 */
.error-types {
  background: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.wrong-count {
  font-size: 24rpx;
  color: #999;
  margin-left: 10rpx;
}

.error-type-list {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.error-type-item {
  background: #fff7e6;
  border: 2rpx solid #ffd591;
  border-radius: 30rpx;
  padding: 15rpx 25rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.error-type-name {
  font-size: 26rpx;
  color: #d46b08;
}

.error-type-count {
  font-size: 24rpx;
  color: #fa8c16;
  font-weight: bold;
}

/* 错题列表 */
.wrong-answers {
  margin-bottom: 30rpx;
}

.wrong-answer-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.wrong-answer-item {
  background: white;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s;
}

.wrong-answer-item:active {
  transform: scale(0.98);
}

.answer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 15rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.answer-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.view-detail {
  font-size: 24rpx;
  color: #667eea;
}

.answer-content {
  margin-bottom: 15rpx;
}

.answer-row {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.answer-label {
  font-size: 26rpx;
  color: #666;
  min-width: 150rpx;
}

.answer-text {
  font-size: 28rpx;
  font-weight: bold;
}

.correct-text {
  color: #52c41a;
}

.wrong-text {
  color: #ff4d4f;
  text-decoration: line-through;
}

.answer-tip {
  background: #e6f7ff;
  border-left: 4rpx solid #1890ff;
  padding: 15rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #0050b3;
  line-height: 1.6;
}

/* 全对鼓励 */
.perfect-score {
  background: white;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.08);
}

.perfect-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.perfect-text {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #52c41a;
  margin-bottom: 15rpx;
}

.perfect-desc {
  display: block;
  font-size: 28rpx;
  color: #999;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-action {
  flex: 1;
  padding: 30rpx;
  border-radius: 50rpx;
  font-size: 28rpx;
  background: white;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.btn-action:active {
  transform: scale(0.95);
}

.btn-action.btn-primary {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
}
